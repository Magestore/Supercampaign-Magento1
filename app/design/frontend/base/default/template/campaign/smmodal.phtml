                if ($overlay_color == 'no_bg_fix_popup' || $overlay_color == 'no_bg_absoulute_popup') {
                    $horizontalpx = ".sc-popup" . $popup->getData('template_code') . " .modal{left:50%;margin-left:-" . $widthcenter . "px;}";
