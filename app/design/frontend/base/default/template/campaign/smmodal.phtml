        Popup.urlImages = "<?php echo $this->getBaseUrl();?>" + "skin/frontend/base/default/";
        Popups[id] = Popup;
    }
    $j(window).bind("load", function () {

        for (var i = Popups.length - 1; i >= 0; i--) {
