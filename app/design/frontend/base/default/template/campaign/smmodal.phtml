        switch ($horizontal_position) {
            case 'left':
                if ($overlay_color == 'no_bg_fix_popup' || $overlay_color == 'no_bg_absoulute_popup') {
                    $horizontalpx = ".sc-popup".$popup->getData('template_code')." .modal{left:" . $horizontal_px . "px;}";
